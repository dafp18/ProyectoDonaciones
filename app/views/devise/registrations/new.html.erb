<%= stylesheet_link_tag 'styles-users/sign_up'%>
<%= render "menu/navbar" %>

<div class="container">    

    <div class="form-registro">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="input-field">
            <%= f.label :nombres%>
            <%= f.text_field :name, autofocus: true%>
          </div> 

          <div class="input-field">
            <%= f.label :Apellidos %>
            <%= f.text_field :last_name%>
          </div>

          <div><%= f.check_box :gender, {}, true %> 
          <%= f.label :gender, "Female" %> 
          </div>

          <div>
          <%= f.check_box :gender, {}, false %>
           <%= f.label :gender, "Male" %> 
          </div>
          
          <div class="input-field">
            <%= f.label :fecha_de_nacimiento%>
            <%= f.text_field :date_of_bith, class:'datepicker', id:'fecha'%>
          </div>

          <div class="input-field">
            <%= f.label :dirección%>
            <%= f.text_field :address%>
          </div> 

          <div class="input-field">
            <%= f.label :teléfono, placeholder:"Fecha de nacimiento"%>
            <%= f.telephone_field :phone%>
          </div>  

          <div class="input-field">
            <%= f.label :email %>
            <%= f.email_field :email, autocomplete: "email" %>
          </div>

          <div class="input-field">
            <%= f.label :Contraseña %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="input-field">
            <%= f.label :Repetir_contraseña %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Registrarse", class: "bton  btn-block mdl-button mdl-js-button mdl-js-ripple-effect" %>
          </div>
          
          </div>
      <% end %>
  
</div>

<h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>

<%= javascript_include_tag 'menu/registration'%>
