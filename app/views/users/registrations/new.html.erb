<%= stylesheet_link_tag 'styles-users/sign_up'%>
<%= render "barra-menu/navbar" %>

<div class="container">    

    <div class="form-registro">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="input-field mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :nombres, class:"mdl-textfield__label"%>
            <%= f.text_field :name, autofocus: true, class:"mdl-textfield__input"%>
          </div> 

          <div class="input-field mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :Apellidos, class:"mdl-textfield__label"%>
            <%= f.text_field :last_name, class:"mdl-textfield__input"%>
          </div>          
          
          <div class="input-field">
            <%= f.label :fecha_de_nacimiento, class:"mdl-textfield__label"%>
            <%= f.text_field :date_of_birth, class:'datepicker', id:'fecha'%>
          </div>

          <div class="input-field mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :dirección, class:"mdl-textfield__label"%>
            <%= f.text_field :address, class:"mdl-textfield__input"%>
          </div> 

          <div class="input-field mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :teléfono, class:"mdl-textfield__label"%>
            <%= f.telephone_field :phone, class:"mdl-textfield__input"%>
          </div>  

          <div class="input-field mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :Correo_electrónico, class:"mdl-textfield__label" %>
            <%= f.email_field :email, autocomplete: "email" , class:"mdl-textfield__input"%>
          </div>

          <div class="input-field mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :Contraseña, class:"mdl-textfield__label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> carácteres como mínimo)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class:"mdl-textfield__input" %>
          </div>

          <div class="input-field">
            <%= f.label :Repetir_contraseña, class:"mdl-textfield__label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"mdl-textfield__input"%>
          </div>

          <div class="actions">
            <%= f.submit "Registrarse", class: "bton  btn-block mdl-button mdl-js-button mdl-js-ripple-effect", id:"bton-1" %>
          </div>
      <% end %>             
  
</div>

    

<%= javascript_include_tag 'user-registration/registration'%>
